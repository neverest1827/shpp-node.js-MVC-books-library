<!DOCTYPE html>
<html lang="ru">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>shpp-library</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="library Sh++">

    <link rel="stylesheet" href="/libs.min.css">
    <link rel="stylesheet" href="/style.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css"
          crossorigin="anonymous"/>
</head>

<body data-gr-c-s-loaded="true" class="">
<%- include('./partials/header.ejs') %>
<section id="main" class="main-wrapper">
    <div class="container">
        <script id="pattern" type="text/template">

        </script>
        <div id="content" class="book_block col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div id="id" book-id="{id}">
                <div id="bookImg" class="col-xs-12 col-sm-3 col-md-3 item">
                    <img src="./books-images{id}.jpg" alt="Responsive image" class="img-responsive">
                    <hr>
                    <div id="rating"></div>
                </div>
                <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9 info">
                    <div class="bookInfo col-md-12">
                        <div id="title" class="titleBook"></div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="bookLastInfo">
                            <div class="bookRow"><span class="properties">автор:</span><span id="author"></span>
                            </div>
                            <div class="bookRow"><span class="properties">год:</span><span id="year"></span></div>
                            <div class="bookRow"><span class="properties">страниц:</span><span id="pages"></span>
                            </div>
                            <div class="bookRow"><span class="properties">isbn:</span><span id="isbn"></span></div>
                        </div>
                    </div>
                    <div class="btnBlock col-xs-12 col-sm-12 col-md-12">
                        <button type="button" class="btnBookID btn-lg btn btn-success">Хочу читать!</button>
                    </div>
                    <div class="bookDescription col-xs-12 col-sm-12 col-md-12 hidden-xs hidden-sm">
                        <h4>О книге</h4>
                        <hr>
                        <p id="description"></p>
                    </div>
                </div>
                <div class="bookDescription col-xs-12 col-sm-12 col-md-12 hidden-md hidden-lg">
                    <h4>О книге</h4>
                    <hr>
                    <p class="description"></p>
                </div>
            </div>
        </div>
    </div>
</section>
<%- include('./partials/footer.ejs') %>

<script src="/libs.min.js"></script>
<script src="/search.js"></script>
<script src="/common.js"></script>
<script src="/book.js"></script>
</body>

</html>